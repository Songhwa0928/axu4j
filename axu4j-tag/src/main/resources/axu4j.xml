<axu4j>
    <config>
        <reloadtime>60000</reloadtime>
    </config>
    <layout>
        <prefix>/WEB-INF/layouts/</prefix>
        <encoding>UTF-8</encoding>
    </layout>
    <row>
        <wrap>
<![CDATA[
<div id="{{id}}" class="ax-layer {{css}}" style="{{style}}">
	{{{doBody}}}
</div>
]]>
        </wrap>
    </row>
    <col>
        <wrap>
<![CDATA[
<div id="{{id}}" class="ax-col-{{size}}">
	<div class="ax-unit">
		<div class="ax-box {{css}}" style="{{style}}">
            {{#wrap}}<div class="ax-box-wrap">{{/wrap}}
                {{{doBody}}}
			{{#wrap}}</div>{{/wrap}}
		</div>
		<div class="ax-clear"></div>
		<div class="H20"></div>
	</div>
</div>
]]>
        </wrap>
    </col>
    <form>
        <wrap>
<![CDATA[
<form id="{{id}}" name="{{name}}" method="{{method}}" class="{{css}}" style="{{style}}">
	<div class="ax-rwd-table">
		{{{doBody}}}
	</div>
</form>
]]>
        </wrap>
    </form>
    <fields>
        <wrap>
<![CDATA[
<div id="{{id}}" class="item-group {{css}}" style="{{style}}">
	{{{doBody}}}
	<div class="group-clear"></div>
</div>
]]>
        </wrap>
    </fields>
    <field>
        <wrap>
<![CDATA[
<div id="{{id}}" class="item">
	<div class="item-lable">
		<span class="th">{{label}}</span>
		<span class="td inputText {{css}}" style="{{style}}" title="{{title}}">
			{{{doBody}}}
		</span>
	</div>
</div>
<div class="item-clear"></div>
]]>
        </wrap>
    </field>
    <customs>
        <custom id="select">
<![CDATA[
<select name="{{name}}">
{{#emptyName}}
	<option value="">{{emptyName}}</option>
{{/emptyName}}
{{#options}}
	<option value="{{value}}">{{name}}</option>
{{/options}}
</select>
]]>
        </custom>
        <custom id="form">
<![CDATA[
<form name={{name}} action="{{action}}" method="{{method}}">
	{{doBody}}
</form>
]]>
        </custom>
    </customs>
</axu4j>